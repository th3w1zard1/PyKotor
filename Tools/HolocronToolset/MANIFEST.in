include LICENSE
include README.md
include requirements.txt
recursive-include src/toolset *.py
include src/resources_rc.py
# Include help directory (contents.xml and other help files)
recursive-include src/toolset/help *.xml
recursive-include src/toolset/help *.md
# Include wiki directory for help system
# Note: setup.py copies wiki from repo root to src/toolset/wiki before building
# MANIFEST.in paths are relative to the file location and cannot use parent directory references
recursive-include src/toolset/wiki *.md
recursive-exclude * __pycache__
recursive-exclude * *.pyc
recursive-exclude * *.pyo
recursive-exclude * plugin
recursive-exclude * build
recursive-exclude * logs
global-exclude *.pyc
global-exclude __pycache__
global-exclude plugin*

